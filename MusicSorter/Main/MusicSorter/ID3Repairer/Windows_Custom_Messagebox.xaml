<Window x:Class="MusicSorter.Windows_Custom_Messagebox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows_Custom_Messagebox" Height="153" Width="420"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize" Icon="Skin/iconxp.ico" ShowInTaskbar="False"
        FontFamily="Microsoft YaHei"
        Topmost="True"
        Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="Skin/Messagebox_BG.png" />
    </Window.Background>
    <Grid>
    	<Button x:Name="Button_OK" Content="确定" HorizontalAlignment="Right" Height="22" Margin="0,0,70,4" VerticalAlignment="Bottom" Width="58" FontSize="12" Click="Button_OK_Click" TabIndex="0" />
    	<Button x:Name="Button_Cancel" Content="取消" HorizontalAlignment="Right" Height="22" Margin="0,0,7,4" VerticalAlignment="Bottom" Width="58" FontSize="12" Click="Button_Cancel_Click" />
        <TextBlock x:Name="Label_Content" Margin="10,32,10,35" TextWrapping="Wrap" />
        
    </Grid>
</Window>
